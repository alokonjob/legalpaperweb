@page
@model PaperWorks.RolesListModel
@using AspNetCore.Identity.Mongo.Model
@inject RoleManager<MongoRole> RoleManager
@{
    ViewData["Title"] = "RolesList";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section id="caseListSection">
    <h4 class="display-4 m-3 text-muted text-center" data-aos="fade-left" data-aos-delay="800">Role List</h4>
</section>
<div class="row">
    <a asp-page="/Admin/CreateRole" class="btn btn-success btn-block">Create New Roles</a>
</div>

<div class="row">
    <table class="table table-striped table-bordered dt-responsive nowrap" id="caseList" style="width:100%">
        <thead>
            <tr>
                <th>
                    RoleId
                </th>
                <th>
                    RoleName
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var role in RoleManager.Roles)
            {
                <tr>
                    <td>
                        @role.Id
                    </td>
                    <td>
                        @role.Name
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>



