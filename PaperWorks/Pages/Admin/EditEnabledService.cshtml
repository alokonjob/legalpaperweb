@page
@model PaperWorks.EditEnabledServiceModel
@{
    ViewData["Title"] = "EditEnabledService";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section id="enabledServicesSection" class="container">
    <h4 class="display-4 m-3 text-muted text-center">Modify Enabled Services</h4>
</section>


<section id="editEnabledService">
    <div class="container">

        <form id="editServiceForm" method="post">
            <div class="row">
                <div class="col-6 bg-light">
                    <h4 class="display-4 m-3 text-muted text-center">Basic Information</h4>
                    <div class="form-group">
                        <label class="lead" asp-for="EnabledService.ServiceDetail.Name"></label>
                        <input asp-for="EnabledService.ServiceDetail.Name" class="form-control" disabled />
                        <input asp-for="EnabledService.EnableId" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label class="lead" asp-for="EnabledService.Location.City"></label>
                        <input asp-for="EnabledService.Location.City" class="form-control" disabled />
                        <input asp-for="EnabledService.Location.City" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EnabledService.CostToCustomer"></label>
                        <input asp-for="EnabledService.CostToCustomer" class="form-control" />
                        <span asp-validation-for="EnabledService.CostToCustomer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnabledService.CostToConsultant"></label>
                        <input asp-for="EnabledService.CostToConsultant" class="form-control" />
                        <span asp-validation-for="EnabledService.CostToConsultant" class="text-danger"></span>
                    </div>
                    <div class="form-check">

                        <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="EnabledService.IsActive">
                        <span class="form-check-label" asp-validation-for="EnabledService.IsActive">Active When Checked</span>
                    </div>
                    <button id="save-address-button" type="submit"  class="btn btn-primary">Update</button>
                </div>
                <div class="col-6 bg-light">
                    <h4 class="display-4 m-3 text-muted text-center">Steps</h4>
                    @for (int i = 0; i < 20; i++)
                    {
                        <div class="form-group">

                            <input asp-for="EnabledService.Steps[i].Name" class="form-control" placeholder="Step Name" />
                            <input asp-for="EnabledService.Steps[i].Description" class="form-control" placeholder="Step Description" />
                        </div>
                    }
                </div>
            </div>
        </form>

    </div>
</section>

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#enabledServicesSection").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        });
    </script>
}


