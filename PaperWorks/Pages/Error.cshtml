@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}





<section id="errrorPage">
    <h4 class="display-4 m-3 text-muted text-center" data-aos="fade-left" data-aos-delay="800">OOOOPS</h4>
</section>


<div class="row">
    <div class="col-8">
        <img src="../img/dogconfused.jpg" class="d-inline-block align-top" />
    </div>
    <div class="col-4">
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>
        @if (Model.ShowRequestId)
        {
            <p class="lead">
                <strong>OOPS SOMETHING WENT WRONG</strong>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
</div>

@section Scripts{



    <script type="text/javascript">
        $(document).ready(function () {
            $("#errrorPage").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        }
    </script>
}
