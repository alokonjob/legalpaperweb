@page
@model PaperWorks.AssignCaseManagerModel
@{
    ViewData["Title"] = "ChangeConsultant";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <section id="caseManagerSection">
        <h5 class="display-4 m-3 text-muted text-center">@Model.CurrentCaseManager.FullName - @Model.CurrentCaseManager.Email</h5>
        <h6 class="display-4 m-3 text-muted text-center">is existing Case Manager</h6>
    </section>


<form method="POST">
    <div class="row m-3" id="consultants">
        @for (int i = 0; i < Model.CaseManagers.Count(); i++)
        {
            <div class="col-sm-3">

                <div class="card  border-0 p-2 bg-danger text-white mb-1">
                    <div class="card-header">
                        <div class="row form-group">
                            <div class="col-md-10">
                                <h4 class="lead text-left"><strong>@Model.CaseManagers[i].FullName</strong></h4>
                            </div>
                            <div class="col-md-2">
                                <input type="radio" asp-for="SeletedEmail" id="radioStff" class="form-control" value="@Model.CaseManagers[i].Email" data-toggle="modal" data-target="#exampleModal">
                                <input type="hidden" asp-for="Receipt">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="row form-group">
                            <div class="col-md-2 col-lg-3 ">
                                <span class="fa fa-envelope-open-text fa-2x" aria-hidden="true"></span>
                            </div>
                            <div class="col-md-10 col-lg-9">
                                @Model.CaseManagers[i].Email
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-2 col-lg-3">
                                <span class="fa fa-phone-volume fa-2x" aria-hidden="true"></span>
                            </div>
                            <div class="col-md-10 col-lg-9 ">
                                @Model.CaseManagers[i].PhoneNumber
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        @*<span class="fa fa-star" aria-hidden="true"></span>
                            <span aria-hidden="true" class="text-right ml-3 lead">@Model.CaseManagers[i].RatingsValue/5</span>
                            <span class="fas fa-award fa-lg ml-3" aria-hidden="true"></span>
                            <span aria-hidden="true" class="text-right ml-3 lead">@Model.CaseManagers[i].TotalCases Cases</span>*@
                    </div>
                </div>
            </div>

        }


        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="modal-title" id="exampleModalLabel">Change Case Manager from </h6>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body form-group">
                        @*<input type="text" class="form-control mb-2" asp-for="FinalizedCost" placeholder="Final Negotiated Cost" />
        <span asp-validation-for="FinalizedCost" class="text-danger"></span>
        <textarea class="form-control" rows="3" asp-for="@Model.ReasonOfAssignment" placeholder="e.g. agreed On Low cost, Good rating"></textarea>
        <input class="form-control" type="hidden" id="Email" name="Email" value="@Model.FullConsultantDetails[i].UserDetails.Email" />
            <input class="form-control" type="hidden" id="Name" name="Name" value="@Model.FullConsultantDetails[i].UserDetails.FullName" />
            <input class="form-control" type="hidden" id="Phone" name="Phone" value="@Model.FullConsultantDetails[i].UserDetails.PhoneNumber" />*@
                        <ul class="list-unstyled">
                            <li>
                                <strong>Current CM </strong>:  @Model.CurrentCaseManager.FullName - @Model.CurrentCaseManager.Email
                            </li>
                            
                        </ul>
                    </div>
                    <div class="modal-footer form-group">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Dont Change</button>
                        <button type="submit" class="btn btn-primary">Change Case Manager</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#caseManagerSection").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        });
    </script>
}
