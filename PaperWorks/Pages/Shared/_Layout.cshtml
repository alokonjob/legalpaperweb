            // Check for a hash value
            if (this.hash !== '') {
                // Prevent default behavior
                e.preventDefault();

                // Store hash
                const hash = this.hash;
                this.hash.offset().top = $(hash).offset().top - $("#main-header").height() * 1.1;
                // Animate smooth scroll
