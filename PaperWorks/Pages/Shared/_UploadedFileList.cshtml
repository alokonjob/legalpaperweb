@model List<string>
@if (Model.Count() == 0)
{
    <section class="text-center">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4 class="lead text-danger">No Files Uploaded Yet.</h4>
                </div>
            </div>
        </div>
    </section>
}
else
{
<div>
    <table class="table table-striped table-bordered " id="serviceListingTable" style="width:100%">
        <thead>
            <tr>
                <th>
                    File Name
                </th>
                <th>
                    Download
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>

            @for (var i = 0; i < Model.Count(); i++)
            {
            <tr>
                <td>
                    @Html.DisplayFor(model => model[i])
                </td>
                <td>

                    <form asp-page-handler="Download" asp-route-FileName="@Model[i]">
                        <input type="submit" class="button" asp-for="@Model[i]">
                    </form>
                </td>
                <td>
                <td> 
                    <a asp-page="Case/CaseDetail" asp-page-handler="File" asp-route-FileName="@Model[i]">Download</a> 
                </td>
            </tr>

            }
        </tbody>
    </table>
</div>
}
