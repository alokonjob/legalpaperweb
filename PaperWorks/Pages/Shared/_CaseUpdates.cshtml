@using  CaseManagementSpace
@using  User
@model List<CaseUpdate>
@if (Model.Count() == 0)
{

    <section class="text-center">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4 class="lead text-danger">No Updates Yet.Start Working on this Case</h4>
                </div>
            </div>
        </div>
    </section>
}
else
{

    <table class="table table-striped table-bordered wrap" id="caseUpdateTable" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].UpdatedBy.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].UpdatedDate)
                </th>
                @if (User.IsFounder())
                {
                    <th>
                        @Html.DisplayNameFor(model => model[0].IsDeleted)
                    </th>
                }


                @if (User.IsCaseManager() || User.IsFounder())
                {
                    <th>
                        Delete
                    </th>
                }
                @if (User.IsCaseManager() || User.IsFounder())
                {
                    <th>
                        Shared With Consultant
                    </th>
                }

            </tr>
        </thead>
        <tbody>

            @foreach (var customerCaseUpdate in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => customerCaseUpdate.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(model => customerCaseUpdate.UpdatedBy.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => customerCaseUpdate.UpdatedDate)
                    </td>
                    @if (User.IsFounder())
                    {
                        <td>
                            @Html.DisplayFor(model => customerCaseUpdate.IsDeleted)
                        </td>

                    }
                    @if (User.IsCaseManager() || User.IsFounder())
                    {
                        <td>

                            <form class="form" id="deleteForm" asp-page-handler="deleteUpdate" method="post">
                                <div class="form-group">
                                    <input type="hidden" id="UpdateId" name="UpdateId" value="@customerCaseUpdate.CaseUpdateId" />
                                </div>
                                <button class="btn btn-success" type="submit" id="postDeleteBtn">Delete</button>

                            </form>
                        </td>
                    }
                    @if (User.IsCaseManager() || User.IsFounder())
                    {
                        <td>
                            @Html.DisplayFor(model => customerCaseUpdate.ShareWithConsultantEmail)
                        </td>
                    }
                </tr>

            }
        </tbody>
    </table>
}

@section Scripts{

}
