@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}
    <section id="registerConfirmation">
        
        @{
            if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                    Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                </p>
            }
            else
            {
                
                <h1 class="display-4 text-info text-center">@ViewData["Title"]</h1>
                <h1 class="display-4 text-success text-center mt-3">Please check your email to confirm your account.</h1>
            }
        }
    </section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#registerConfirmation").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        });
    </script>
}
