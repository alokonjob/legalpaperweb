@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section id="forgotPasswordSection">
    <h4 class="display-4 m-3 text-muted text-center" data-aos="fade-left" data-aos-delay="800">Enter your email.</h4>
</section>

<hr />
<div class="row">
    <div class="col">
        <form class="form-inline justify-content-center" method="post">



            <div class="form-group ">
                <input asp-for="Input.Email" class="form-control input-lg mr-2" placeholder="Enter Registered Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary d-block">Submit</button>
            </div>




        </form>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <div asp-validation-summary="All" class="text-danger text-center"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#forgotPasswordSection").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        });
    </script>
}
