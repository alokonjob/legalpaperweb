@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}
<section id="confirmEmail">
    <h1 class="display-3 text-success text-center">@Model.StatusMessage</h1>
    <h1 class="display-4 text-success text-center mt-3">@Model.ProceedLogin</h1>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#confirmEmail").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        });
    </script>
}