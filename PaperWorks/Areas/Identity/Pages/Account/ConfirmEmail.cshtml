@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}
    <section id="confirmEmail">
        @if (Model.ConfirmationResult.Succeeded)
        {
            <h4 class="lead display-3 text-success text-center">@Model.StatusMessage</h4>
            <h6 class="lead display-4 text-success text-center mt-3">@Model.ProceedLogin</h6>
        }
        else
        {
            <h4 class="lead display-3 text-danger text-center">@Model.StatusMessage</h4>
            <h6 class="lead display-4 text-danger text-center mt-3">@Model.ProceedLogin</h6>
        }
    </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#confirmEmail").css("margin-top", $("#topnavbarbutnobeer").height() * 1.3);
        });
    </script>
}